%form.contact-new-form{ action: "/contacts/new", method: "post" }
  %fieldset
    %legend Contact Values
    %p
      %label{:for => "email"} Email
      %input#email{ type: "email", name: "email", placeholder: "Email", value: ( @contact.email or '' ) }
      %span.error= @contact.errors['email']

      %label{:for => "First Name"} Email
      %input#first_name{ type: "text", name: "first", placeholder: "First Name", value: ( @contact.first or '' ) }
      %span.error= @contact.errors['first']

      %label{:for => "Last Name"} Email
      %input#last_name{ type: "text", name: "last", placeholder: "Last Name", value: ( @contact.last or '' ) }
      %span.error= @contact.errors['last']

      %label{:for => "Email"} Email
      %input#phone{ type: "text", name: "phone", placeholder: "Phone", value: ( @contact.phone or '' ) }
      %span.error= @contact.errors['phone']
    %button Save
%p
  %a{ href: "/contacts" } Back
